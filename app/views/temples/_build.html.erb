<div class="comments">
  <div class = "comment_image">
    <div class="comment-image comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= link_to build.image, 'data-lightbox': @build.image do %>
      <%= image_tag build.image.variant(resize: '190x190'), class: 'comment-image' if build.image.attached? %>
      <% end %>
    </div>
  </div>

  <div class = "comment_text">
    <div class="comment-user comment">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= build.user.nickname %>
    </div>  
    <div class="comment-content comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= build.text %>
    </div>
  </div>
</div>

