<% @shrinesArray.each do |shrinesArray| %>
  <div class='post'>
    <%= link_to shrine_path(shrinesArray.id), class:'link' do %>
    <h1><%= shrinesArray.name %></h1>
    <% end %>
    <p><%= shrinesArray.address %></p>
    <%= link_to shrine_path(shrinesArray.id), class:'link' do %>
    <p class='prof_image'><%= image_tag shrinesArray.images.first %></p>
    <% end %>
    <p><%= simple_format(shrinesArray.info) %></p>
  </div>
<% end %>
