<div class= "festival_main">

  <%# 左側：神社一覧情報 %>
  <div id= 'nav'>
    <% if params[:shrine_id] %>
    <h1>神社一覧</h1>
    <%= render 'shrines/nav' %>
    <% elsif params[:temple_id] %>
    <h1>寺院一覧</h1>
      <%= render 'temples/nav' %>
    <% end %>
  </div>

    <%# 中央：コメント表示欄 %>
    <div class='festival_comment'>
    <div class='title_name'>
      <% if params[:shrine_id] %>
        <h1 class="item_title">
        <span class='title_span'>
        <%= link_to shrine_path(@shrine.id), class:'link' do %>
        <%= @shrine.name %>
        <% end %>
        </span>
        <span class='supplement'>の御朱印</h1>
      <% elsif params[:temple_id] %>
        <h1 class="item_title">
        <span class='title_span'>
        <%= link_to temple_path(@temple.id), class:'link' do %>
        <%= @temple.name %></span><span class='supplement'>の御朱印</h1>
        <% end %>
      <% end %>
    </div>

    <div class='comments'>
      <% if params[:shrine_id] %>
        <%= render partial: 'shrineComments/festival', collection: @festivals %>
      <% elsif params[:temple_id] %>
        <%= render partial: 'templeComments/festival', collection: @festivals %>
      <% end %>
    </div>
      <%= paginate @festivals %>

      <% if params[:shrine_id] %>
        <%= render partial: 'shrineComments/festivalComment' %>
      <% elsif params[:temple_id] %>
        <%= render partial: 'templeComments/festivalComment' %>
      <% end %>
    </div>

    <%# 右側：神社説明欄 %>
    <% if params[:shrine_id] %>
    <%= render partial: 'shrineComments/festivalInfo' %>
    <% elsif params[:temple_id] %>
    <%= render partial: 'templeComments/festivalInfo' %>
    <% end %>
  </div>
</div>

<script type="text/javascript" src="shrines/show"></script>