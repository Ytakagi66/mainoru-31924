<div class= "nature_main">

  <%# 左側：神社一覧情報 %>
  <div id= 'nav'>
  <% if params[:shrine_id] %>
  <h1>神社一覧</h1>
    <%= render 'shrines/nav' %>
  <% elsif params[:temple_id] %>
  <h1>寺院一覧</h1>
    <%= render 'temples/nav' %>
  <% end %>
  </div>

    <%# 中央：コメント表示欄 %>
    <div class='nature_comment'>
    <div class='title_name'>
      <% if params[:shrine_id] %>
        <h1 class="item_title">
        <span class='title_span'>
        <%= link_to shrine_path(@shrine.id), class:'link' do %>
        <%= @shrine.name %>
        <% end %>
        </span>
        <span class='supplement'>の自然・景色</h1>
      <% elsif params[:temple_id] %>
        <h1 class="item_title">
        <span class='title_span'>
        <%= link_to temple_path(@temple.id), class:'link' do %>
        <%= @temple.name %>
        <% end %>
        </span>
        <span class='supplement'>の自然・景色</h1>
      <% end %>
    </div>
    
    <div class='another_select'>
    <% if params[:shrine_id] %>
      <ul>
        <li class='select'><%= link_to shrine_festivals_path(@shrine.id), class: 'select_link' do %>祭・神事<% end %></li>
        <li class='select'><%= link_to shrine_goshuins_path(@shrine.id), class: 'select_link' do %>御朱印<% end %></li>
        <li class='select'><%= link_to shrine_builds_path(@shrine.id), class: 'select_link' do %>建築物<% end %></li>
        <li class='select'><%= link_to shrine_natures_path(@shrine.id), class: 'select_link now' do %>自然・景色<% end %></li>
        <li class='select'><%= link_to shrine_histories_path(@shrine.id), class: 'select_link' do %>歴史<% end %></li>
      </ul>
    <% elsif params[:temple_id] %>
      <ul>
        <li class='select'><%= link_to temple_festivals_path(@temple.id), class: 'select_link' do %>祭・神事<% end %></li>
        <li class='select'><%= link_to temple_goshuins_path(@temple.id), class: 'select_link' do %>御朱印<% end %></li>
        <li class='select'><%= link_to temple_builds_path(@temple.id), class: 'select_link' do %>建築物<% end %></li>
        <li class='select'><%= link_to temple_natures_path(@temple.id), class: 'select_link now' do %>自然・景色<% end %></li>
        <li class='select'><%= link_to temple_histories_path(@temple.id), class: 'select_link' do %>歴史<% end %></li>
      </ul>
      <% end %>
    </div>

      <div class='comments'>
      <% if params[:shrine_id] %>
        <%= render partial: 'shrineComments/nature', collection: @natures %>
      <% elsif params[:temple_id] %>
        <%= render partial: 'templeComments/nature', collection: @natures %>
      <% end %>
      </div>
      <%= paginate @natures %>

      <% if params[:shrine_id] %>
        <%= render partial: 'shrineComments/natureComment' %>
      <% elsif params[:temple_id] %>
        <%= render partial: 'templeComments/natureComment' %>
      <% end %>
    </div>

  <%# 右側：神社説明欄 %>
  <% if params[:shrine_id] %>
  <%= render partial: 'shrineComments/natureInfo' %>
  <% elsif params[:temple_id] %>
  <%= render partial: 'templeComments/natureInfo' %>
  <% end %>
</div>

<script type="text/javascript" src="shrines/show"></script>