<%= render "shared/second-header"%>

<%= form_with model: @user, url: edit_user_registration_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class= 'image_avatar'>
      <div class="img-upload">
        <div class="weight-bold-text">
          プロフィールアイコン
          <span class="indispensable">必須</span>
        </div>
        <div class="click-upload">
          <p>
            クリックしてファイルをアップロード
          </p>
          <%= f.file_field :avatar, id:"avatar" %>
        </div>
      </div>
      <div id="image-list-first"></div>
    </div>
  </div>  

  <div class="form-group">
    <div class= 'image_avatar'>
      <div class="img-upload">
        <div class="weight-bold-text">
          背景画像
          <span class="indispensable">必須</span>
        </div>
        <div class="click-upload">
          <p>
            クリックしてファイルをアップロード
          </p>
          <%= f.file_field :backimage, id:"backimage" %>
        </div>
      </div>
      <div id="image-list-second"></div>
    </div>
  </div>  
      
  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
    </div>
    <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) まいのる太郎", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">現在のパスワード</label>
    </div>
    <%= f.password_field :current_password, class:"input-default", id:"current_password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">新しいパスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">新しいパスワード(確認)</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"パスワードの確認" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <p class='info-text'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
  </div>

  <div class="form-group">
    <div class="weight-bold-text">
      お住まいの地域
    </div>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">自己紹介</label>
    </div>
    <%= f.text_area :self_info, class:"text-default", id:"self_info", placeholder:"自己紹介", maxlength:"350", rows:"3" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お気に入りの寺社仏閣</label>
    </div>
    <%= f.text_area :favorite, class:"input-default", id:"favorite", placeholder:"例）神宮"%>
  </div>

  <div class="form-group">
    <div class='register-btn'>
      <%= f.submit "更新" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>
</div>

<%= render "shared/second-footer"%>
