<div class="comment_preview">
  <div class = "comment_image">
  
    <div class="comment-image comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <div class='title'><%= goshuin.title %></div>
      <%= link_to goshuin.image, 'data-lightbox': @goshuin.image do %>
      <%= image_tag goshuin.image.variant(resize: '600x600'), class: 'comment-image' if goshuin.image.attached? %>
      <% end %>
        <div class = "comment_text">
          <div class="comment-user comment">
            <!-- 投稿したユーザー名情報を出力する -->
            <div class='name'><%= goshuin.user.nickname %></div>
          </div>  
          <div class="comment-content comment">
            <!-- 投稿したメッセージ内容を記述する -->
            <%= goshuin.text %>
          </div>
        </div>
      </div>      
    </div>
</div>
