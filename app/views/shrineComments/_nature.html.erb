<div class="comment_preview">
  <div class = "comment_image">
  
    <div class="comment-image comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <div class='title'><%= nature.title %></div>
      <%= link_to nature.image, 'data-lightbox': @nature.image do %>
      <%= image_tag nature.image.variant(resize: '600x600'), class: 'comment-image' if nature.image.attached? %>
      <% end %>
        <div class = "comment_text">
          <div class="comment-user comment">
            <!-- 投稿したユーザー名情報を出力する -->
            <div class='name'><%= nature.user.nickname %></div>
          </div>  
          <div class="comment-content comment">
            <!-- 投稿したメッセージ内容を記述する -->
            <%= nature.text %>
          </div>
        </div>
      </div>      
    </div>
</div>
