<div class = 'shrine_show'>
  <div class = 'show_main'>

    <div class = 'shrine_name'>
      <%= @shrine.name %>
    </div>

    <%# 神社画像の表示 %>
    <div class = 'show_image'>
      <%= render 'swiper'%>
    </div>

    <%# 神社情報の表示 %>
    <div class = 'show_info'>
      <div class = 'guide'>
      <h1>神社について</h1>
        <table>
          <tr>
            <%# <td class = 'info'>説明</td> %>
            <td colspan="2", class='shrine_info'><%= @shrine.info %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @shrine.address %></td>
          </tr>
          <tr>
            <td>ご利益</td>
            <td><%= @shrine.benefits.name %></td>
          </tr>                 
        </table>
      </div>

      <%# 神社の所在地を示す地図の表示 %>
      <div class = 'shrine_map'>
        <div id="map" data-json="<%= @shrine.to_json %>"></div>
      </div>    
    </div>

<div id="wrap">
  <div id="tab1" class="tab selected">すべて</div>
  <div id="tab2" class="tab">御朱印</div>
  <div id="tab3" class="tab">建築物</div>
  <div id="tab4" class="tab">自然</div>
  <div id="tab5" class="tab">歴史</div>

  <div id="container">
    <div id="slide" class="">
      <div id="first" class="box">
        <%# この神社についてのコメント欄 %>
        <div class = 'shrine_comments'>
            <div class="shrine_comment_content">
              <h4>＜コメント一覧＞</h4>
              <%= render partial: 'comment', collection: @comments %>
            </div>
        </div>
      </div>

      <div id="second" class="box">
        <div class = "shrine_comments">
          <div class="shrine_comment_content">
            <h4>＜コメント一覧＞</h4>
            <%= form_with( model: [@shrine, @goshuin], class: 'form', local: true) do |f| %>
              <div class="form-input">
                <%= f.text_field :text, class: 'form-comment', placeholder: 'コメント' %>
                <label class="form-image">
                  <span class="image-file">画像</span>
                  <%= f.file_field :image, class: 'hidden' %>
                </label>
              </div>
              <%= f.submit '送信', class: 'form-submit' %>
            <% end %>          
            <%= render partial: 'goshuin', collection: @goshuins %>
          </div>
        </div>
      </div>

      <div id="third" class="box">
        <div class = "shrine_comments">
          <div class="shrine_comment_content">
            <h4>＜コメント一覧＞</h4>
            <%= form_with( model: [@shrine, @build], class: 'form', local: true) do |f| %>
              <div class="form-input">
                <%= f.text_field :text, class: 'form-comment', placeholder: 'コメント' %>
                <label class="form-image">
                  <span class="image-file">画像</span>
                  <%= f.file_field :image, class: 'hidden' %>
                </label>
              </div>
              <%= f.submit '送信', class: 'form-submit' %>
            <% end %>          
            <%= render partial: 'build', collection: @builds %>
          </div>
        </div>      
      </div>

      <div id="four" class="box">
        <div class = "shrine_comments">
          <div class="shrine_comment_content">
            <h4>＜コメント一覧＞</h4>
            <%= form_with( model: [@shrine, @nature], class: 'form', local: true) do |f| %>
              <div class="form-input">
                <%= f.text_field :text, class: 'form-comment', placeholder: 'コメント' %>
                <label class="form-image">
                  <span class="image-file">画像</span>
                  <%= f.file_field :image, class: 'hidden' %>
                </label>
              </div>
              <%= f.submit '送信', class: 'form-submit' %>
            <% end %>          
            <%= render partial: 'nature', collection: @natures %>
          </div>
        </div>          
      </div>
      
      <div id="five" class="box">
        <div class = "shrine_comments">
          <div class="shrine_comment_content">
            <h4>＜コメント一覧＞</h4>
            <%= form_with( model: [@shrine, @history], class: 'form', local: true) do |f| %>
              <div class="form-input">
                <%= f.text_field :text, class: 'form-comment', placeholder: 'コメント' %>
                <label class="form-image">
                  <span class="image-file">画像</span>
                  <%= f.file_field :image, class: 'hidden' %>
                </label>
              </div>
              <%= f.submit '送信', class: 'form-submit' %>
            <% end %>          
            <%= render partial: 'history', collection: @histories %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="//unpkg.com/swiper/swiper-bundle.min.js"></script>
<script async src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initMap"></script>
