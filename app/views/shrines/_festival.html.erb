<div class="comments">
  <div class = "comment_image">
    <div class="comment-image comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= image_tag festival.image.variant(resize: '190x190'), class: 'comment-image' if festival.image.attached? %>
    </div>
  </div>

  <div class = "comment_text">
    <div class="comment-user comment">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= comment.user.nickname %>
    </div>  
    <div class="comment-content comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= comment.text %>
    </div>
  </div>
</div>