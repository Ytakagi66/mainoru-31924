<div class="comments">
  <div class = "comment_image">
    <div class="comment-image comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= link_to nature.image, 'data-lightbox': @nature.image do %>
      <%= image_tag nature.image.variant(resize: '190x190'), class: 'comment-image' if nature.image.attached? %>
      <% end %>
    </div>
  </div>

  <div class = "comment_text">
    <div class="comment-user comment">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= nature.user.nickname %>
    </div>  
    <div class="comment-content comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= nature.text %>
    </div>
  </div>
</div>