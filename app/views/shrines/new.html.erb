<div class="shrines-sell-contents">
  <header class="shrines-sell-header">
    <%= link_to image_tag('mainoru-logo-color.png' , size: '185x50'), "/" %>

  </header>
  <div class="shrines-sell-main">
    <h2 class="shrines-sell-title">神社の情報を入力</h2>
    <%= form_with(model:@shrine, id: 'shrine-form', local: true) do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 投稿画像 %>
    <div class="form-group">
      <div class= 'image_avatar'>
        <div class="img-upload">
          <div class="weight-bold-text">
            神社画像
            <span class="indispensable">必須</span>
          </div>
          <div class="click-upload">
            <p>
              クリックしてファイルをアップロード<br>
                ※複数枚投稿可能です。
            </p>
            <label>
              <div class='shrine_input'>
                <%= f.file_field :images, multiple: true, name: 'shrine[images][]', id: 'shrine_image' %>
              </div>
            </label>
          </div>
        </div>
        <div id="image-list-shrine"></div>
      </div>
  </div>  

    <%# 商品名と商品説明 %>
    <div class="new-shrines">
      <div class="weight-bold-text">
        神社名
        <span class="indispensable">必須</span>
      </div>
    <%= f.text_area :name, class:"shrines-text", id:"shrine-name", placeholder:"神社名（必須 40文字まで)", maxlength:"40" %>

      <div class="weight-bold-text">
        神社の説明
        <span class="indispensable">必須</span>
      </div>
    <%= f.text_area :info, class:"shrines-text", id:"shrine-info", placeholder:"神社の説明（必須 1,000文字まで）（歴史、創建、文化財登録情報、自然など）例）「お伊勢さん」と親しく呼ばれる、伊勢神宮の公式サイト。正式には「神宮」といい、2000年の歴史を有する日本人の「心のふるさと」です。（公式サイト参照）" ,rows:"7" ,maxlength:"1000" %>

      <div class="weight-bold-text">
        ご利益
        <span class="indispensable">必須</span>
      </div>
    <%= f.collection_select(:benefits_id, Benefits.all, :id, :name, {}, {class:"select-box", id:"shrine-benefits"}) %>

    <%# 神社の住所 %>
      <div class="weight-bold-text">
        住所
        <span class="indispensable">必須</span>
      </div>
    <%= f.text_area :address, class:"shrines-text", id:"shrine-address", placeholder:"1-2-2" ,maxlength:"1000" %>
    
  </div>

  <%# 下部ボタン %>
  <div class="sell-btn-contents">
    <%= f.submit "投稿する" ,class:"sell-btn" %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
</div>

<% end %>
<footer class="shrines-sell-footer">
  <%= link_to image_tag('mainoru-logo-color.png' , size: '185x50'), "/" %>
  <p class="inc">
    ©︎Mainoru,Inc.
  </p>
</footer>
</div>

<script src="https://maps.google.com/maps/api/js?v=3&key=AIzaSyDyadiU2YaDtGtxz6KHPYO_CHRG42Ji26g"></script>