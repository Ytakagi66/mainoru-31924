<div class="comments">
  <div class = "comment_image">
    <div class="comment-image comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= image_tag history.image, class: 'comment-image' if history.image.attached? %>
    </div>
  </div>

  <div class = "comment_text">
    <div class="comment-user comment">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= history.user.nickname %>
    </div>  
    <div class="comment-content comment">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= history.text %>
    </div>
  </div>
</div>